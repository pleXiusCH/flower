{
    "testEnvironment": "node",
    "clearMocks": true,
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "\\\\node_modules\\\\"
    ],
    "coverageReporters": [
      "json",
      "text",
      "lcov",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts)", 
      "**/*.test.+(ts)",
      "**/*.spec.+(ts)"
    ],
    "testPathIgnorePatterns": [
      "\\\\node_modules\\\\"
    ]
  }