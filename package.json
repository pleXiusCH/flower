{
  "name": "@plexius/flower",
  "private": true,
  "version": "1.0.0",
  "description": "A data-flow graph implementation based on rxjs observables with dynamically programmable nodes",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "serve": "webpack-dev-server --config webpack.dev.js --progress --colors --hot --port 3000",
