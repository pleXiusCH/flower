    "test:watch": "jest --coverage --watch",
    "lint": "lerna run lint",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff"
  },
  "keywords": [
    "rxjs",
    "observables",
    "node",
    "flow",
    "graph",
    "typescript",
    "library"
  ],
  "author": {
    "name": "Peter Unger",
    "email": "peter@pexius.ch"
  },
  "repository": {
    "type": "git",
