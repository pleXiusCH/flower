{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flower/core": ["packages/flower-core/src/index.ts"],
      "@flower/interfaces": ["packages/flower-interfaces/src/index.ts"],
      "@flower/node-impls": ["packages/node-impls/src/index.ts"],
      "@flower/react": ["packages/flower-react/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
